<style type="text/css">
    body {
        background-color: #f9f9f9;
    }
</style>

<div class="login center" >
        <div class="login-header">
            <img src="assets/images/sun.png">
            <h4> Sign up for MoodTracker</h4>  
        </div>

        {{#if message}}
            <div class="alert alert-danger mt-3">{{ message }}</div>
        {{/if}}

        <!-- SIGNUP FORM -->

        <form class="login-form mt-3" data-toggle="validator" action="/signup" method="post">
            <div class="form-group">
                <label>Email</label>
                <input type="text" class="form-control" id="inputEmail" name="email" data-error="That email address is invalid" required>
                <div class="help-block with-errors"></div>
            </div>
            <div class="form-group">
                <label>Password</label>
                <input type="password" data-minlength="1" class="form-control" id="inputPassword" name="password" required>
            </div>

            <button type="submit" class="btn btn-success btn-block btn-lg">Sign Up</button>
        </form>

        <p class="login-signup mt-3">Have an account? <a href="/login">Log in.</a></p>
</div>